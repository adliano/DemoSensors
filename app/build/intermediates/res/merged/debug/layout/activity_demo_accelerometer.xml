<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.sensors.DemoAccelerometer"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="#ffffff"
        android:background="#0000ff"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:text="@string/str_accelerometer_activity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_x_axis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/text_view_y_axis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#00ff00"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/text_view_z_axis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#0000ff"
                android:textStyle="bold"
                android:textSize="25sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_status_accelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_face_up_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goBack"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/app_name"/>

</LinearLayout>
